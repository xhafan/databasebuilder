<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net40;netstandard2.0</TargetFrameworks>
    <Version>1.0.8</Version>
    <AssemblyVersion>$(Version).0</AssemblyVersion>
    <FileVersion>$(Version).0</FileVersion>
    <Description>Build a versioned database from sql script files in a directory structure.

Documentation: https://github.com/xhafan/databasebuilder/wiki</Description>
    <PackageTags>Database builder sql</PackageTags>
    <Authors>Martin Havlišta</Authors>
    <Company></Company>
    <Product />
    <PackageProjectUrl>https://github.com/xhafan/databasebuilder</PackageProjectUrl>
    <PackageLicenseUrl>https://raw.githubusercontent.com/xhafan/databasebuilder/master/LICENSE</PackageLicenseUrl>
    <PackageReleaseNotes>Refactoring - renamed class DatabaseBuilder to BuilderOfDatabase to avoid the class name collision with the namespace; renamed "OtherScripts" directory to "ReRunnableScripts"; renamed other things to better express their meaning</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="SourceLink.Create.CommandLine" Version="2.8.0" PrivateAssets="All" /> 
  </ItemGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Debug'">
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

</Project>
